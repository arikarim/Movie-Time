<div class= 'container'>
  <div class= 'col-6 mx-auto'>

    <h2 class='mx-3 fw-bolder'>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field mx-3">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:'form-control', autofocus: true, autocomplete: "email" %>
      </div>
      <br/>
      <div class="field mx-3">
        <%= f.label :password %><br />
        <%= f.password_field :password,class:'form-control', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mx-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <br/>
      <div class="actions mx-3">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>