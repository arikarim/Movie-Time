<%= render 'layouts/alerts' %>
<div class= 'container-fluid mb-3'>

  <div class='row p-0'>
    <% @category_articles.each do |article| %>
      
      <div class='d-flex col-6 p-0 article-height article-content'>

        <div class='col-6'>
          <%= image_tag article.image_url, class:'article-photo img-fluid' if article.image %>
        </div>

        <div class='col-6 article-text text-center position-relative'>

          <div class='text-warning text-decoration-underline text-start m-3'>
            <%= @category.name.upcase%>
          </div>

          <div class='text-dark fw-bolder'>
            <%= article.title.capitalize %>
          </div>
          <%= article.text[0..50] %>...
          <div class='position-absolute bottom-0 m-5'>
            Author:  <%= article.author.email%>
          </div>

          <div class='position-absolute bottom-0 fs-6 d-flex'>
            <%= vote(article)%>
          </div>

          <div class='position-absolute bottom-0 start-50 fs-6 '>
            Votes: <%= article.votes.count%>
          </div>

        </div>
      </div>
    <% end %>
  </div>
  <div class='position-fixed bottom-0 mb-5'>
    <div class='mb-3'>
      <div class="digg_pagination">
        <%= will_paginate @category_articles %>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>