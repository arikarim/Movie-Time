
<div class='container'>

  <div class='row m-3'>
    <div class='col-12 position-relative feature-article'>
      <div class='position-absolute bottom-0 imgg start-50'>
        <%= @categories.last.articles.last.title%>
      </div>
      <%= image_tag @categories.last.articles.last.image_url, class:'imgg mg-fluid'  %>
    </div>
  </div>

  <div class='row'>
    <% @categories.each do |category| %>
        <div class='col-3 d-inline-block img1'>
          <div class='position-relative imgg'>
            <div class='position-absolute top-0 start-50'>
              <%= category.name %>
            </div>
            <% category.articles.each do |article| %>
              <% if article == category.articles.last %>
                  <div class='position-absolute bottom-0 start-50'>
                    <%= article.title %>
                  </div>
                  <%= image_tag article.image_url, class:'imgg img-fluid' if article.image  %>
                </div>
              <% end %>
            <%end%>
        </div>
    <% end %>
  </div>

</div>